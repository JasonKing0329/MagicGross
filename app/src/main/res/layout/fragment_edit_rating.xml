<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Score"
            app:layout_constraintBottom_toBottomOf="@+id/et_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_score" />

        <EditText
            android:id="@+id/et_score"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/tv_score"
            app:layout_constraintTop_toBottomOf="@+id/tv_rotten_pro" />

        <EditText
            android:id="@+id/et_person"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/tv_person"
            app:layout_constraintTop_toBottomOf="@+id/et_score" />

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Person"
            app:layout_constraintBottom_toBottomOf="@+id/et_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_person" />

        <TextView
            android:id="@+id/tv_rotten_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Rotten Pro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rotten_aud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Rotten Audience"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_person" />

        <EditText
            android:id="@+id/et_score_aud"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/tv_score"
            app:layout_constraintTop_toBottomOf="@+id/tv_rotten_aud" />

        <EditText
            android:id="@+id/et_person_aud"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/tv_person"
            app:layout_constraintTop_toBottomOf="@+id/et_score_aud" />

        <TextView
            android:id="@+id/tv_score_aud"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Score"
            app:layout_constraintBottom_toBottomOf="@+id/et_score_aud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_score_aud" />

        <TextView
            android:id="@+id/tv_person_aud"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Person"
            app:layout_constraintBottom_toBottomOf="@+id/et_person_aud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_person_aud" />

        <TextView
            android:id="@+id/tv_ok"
            style="@style/TvDialogConfirm"
            android:text="@string/ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_person_aud"/>

    </android.support.constraint.ConstraintLayout>
</layout>