<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.king.app.gross.viewmodel.RankViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg">

        <TextView
            android:id="@+id/tv_title_region"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tag_parent_height"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="地区"
            android:gravity="center"
            android:textColor="@color/text_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_region"
            android:layout_width="0dp"
            android:layout_height="@dimen/tag_parent_height"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_title_region"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/adapter_rank_tag_region" />
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/rv_region"/>

        <TextView
            android:id="@+id/tv_title_params"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tag_parent_height"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="指数"
            android:gravity="center"
            android:textColor="@color/text_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_region"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/tag_parent_height"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_title_params"
            app:layout_constraintTop_toBottomOf="@id/rv_region"
            tools:listitem="@layout/adapter_rank_tag_region"/>
        <LinearLayout
            android:id="@+id/group_title"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_type">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="排名"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="年份"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="名称"/>
            <TextView
                android:id="@+id/tv_title_value"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@{model.titleValueText}"/>
            <TextView
                android:id="@+id/tv_title_rate"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="@{model.titleRateVisibility}"
                android:text="@{model.titleRateText}"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_movies"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_title"
            tools:listitem="@layout/adapter_rank_item"/>

    </android.support.constraint.ConstraintLayout>
</layout>